{
  "package": {
    "name": "layer.hard_mode",
    "type": "layer",
    "version": "1.0.0",
    "display_name": "Hard Mode",
    "description": "Increases difficulty with more enemies and damage"
  },
  "dependencies": {
    "plugins": [
      { "name": "core.gameplay", "version": ">=1.0.0" },
      { "name": "gameplay.combat", "version": ">=1.0.0" }
    ]
  },
  "priority": 50,
  "spawners": [
    {
      "id": "extra_enemy_spawner",
      "volume": {
        "type": "box",
