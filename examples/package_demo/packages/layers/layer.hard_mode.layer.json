      },
      "prefab": "enemy_prefab",
      "spawn_rate": 0.5,
      "max_active": 12
    }
  ],
  "modifiers": [
    {
      "path": "gameplay.enemy_health_multiplier",
      "value": 2.0
    },
    {
      "path": "gameplay.enemy_damage_multiplier",
      "value": 1.75
    },
    {
      "path": "gameplay.player_regen_rate",
      "value": 0
    }
  ]
