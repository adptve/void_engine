        "loop_animation": true,
        "ping_pong": false,
        "interpolation": "linear",
        "orient_to_path": true,
        "easing": "smooth_step"
      },
      "pickable": { "enabled": true, "highlight_on_hover": true }
    },
    {
      "name": "pulsing_sphere",
      "mesh": "sphere",
