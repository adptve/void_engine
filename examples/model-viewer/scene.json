      "animation": { "type": "rotate", "axis": [0.0, 1.0, 0.0], "speed": 0.2 },
      "pickable": { "enabled": true, "highlight_on_hover": true }
    },
    {
      "name": "ground",
      "mesh": "plane",
      "layer": "world",
