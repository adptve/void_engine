        "albedo": { "texture": "textures/Fabric041/Fabric041_1K-PNG_Color.png" },
        "normal_map": "textures/Fabric041/Fabric041_1K-PNG_NormalGL.png",
        "metallic": 0.8,
        "roughness": { "texture": "textures/Fabric041/Fabric041_1K-PNG_Roughness.png" },
        "emissive": [0.1, 0.0, 0.15]
      },
      "animation": { "type": "orbit", "center": [0.0, 0.5, 0.0], "radius": 2.5, "speed": 0.4, "axis": [0.0, 1.0, 0.0], "start_angle": 4.71, "face_center": true },
      "pickable": { "enabled": true, "highlight_on_hover": true }
    },
    {
      "name": "glass_sphere",
      "mesh": "sphere",
      "layer": "transparent",
      "visible": true,
      "transform": { "position": [1.5, 0.6, 2.0], "scale": 0.6 },
      "material": {
        "albedo": [1.0, 1.0, 1.0],
